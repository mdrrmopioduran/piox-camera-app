{
  "expo": {
    "name": "PioX Camera App",
    "slug": "piox-camera",
    "version": "1.0.0",
    "orientation": "default",
    "icon": "./assets/images/icon.png",
    "scheme": "piox-camera",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "jsEngine": "hermes",
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "NSCameraUsageDescription": "Capture photos for disaster documentation",
        "NSLocationWhenInUseUsageDescription": "Tag photos with GPS coordinates",
        "NSPhotoLibraryUsageDescription": "Save photos to your gallery",
        "NSPhotoLibraryAddUsageDescription": "Save captured photos to gallery"
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#FFD700"
      },
      "edgeToEdgeEnabled": true,
      "permissions": [
        "CAMERA",
        "ACCESS_FINE_LOCATION",
        "ACCESS_COARSE_LOCATION",
        "READ_MEDIA_IMAGES",
        "WRITE_EXTERNAL_STORAGE",
        "READ_EXTERNAL_STORAGE"
      ]
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#FFD700"
        }
      ],
      [
        "expo-camera",
        {
          "cameraPermission": "Capture photos for disaster documentation"
        }
      ],
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "Tag photos with GPS coordinates"
        }
      ],
      [
        "expo-media-library",
        {
          "photosPermission": "Save captured photos to gallery",
          "savePhotosPermission": "Save photos to your device",
          "isAccessMediaLocationEnabled": true
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    }
  }
}
